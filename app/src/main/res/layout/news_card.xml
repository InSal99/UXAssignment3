<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:strokeColor="@color/white_warm"
    android:background="@color/white_full"
    app:cardCornerRadius="16dp"
    android:layout_marginEnd="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="114dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNewsCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="lorem ipsum color de amet"
            style="@style/Caption_SemiBold"
            android:textColor="@color/black_cool"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivNewsImage"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="lorem ipsum color de amet"
            style="@style/Body_SemiBold"
            android:textColor="@color/black_full"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvNewsCategory"
            app:layout_constraintStart_toEndOf="@id/ivNewsImage"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNewsUploadTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 hours ago"
            style="@style/Caption_Regular"
            android:textColor="@color/black_light"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toEndOf="@id/ivNewsImage"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>